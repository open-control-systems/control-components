menu "Dallas Semiconductor Rom Code Scanner"
    config OCS_TOOLS_ROM_CODE_SCANNER_RESULT_BUFFER_SIZE
        int "Buffer size to store the formatted scan result, in bytes"
        default 1024

    config OCS_TOOLS_ROM_CODE_SCANNER_GPIO
        int "1-Wire bus GPIO"
        default 27
        help
            1-Wire bus GPIO.

    config OCS_TOOLS_ROM_CODE_SCANNER_RESET_PULSE_INTERVAL
        int "Reset pulse duration, in microseconds"
        default 480

    config OCS_TOOLS_ROM_CODE_SCANNER_PRESENCE_PULSE_INTERVAL
        int "Presence pulse duration, in microseconds"
        default 60

    config OCS_TOOLS_ROM_CODE_SCANNER_WRITE_SLOT_INTERVAL
        int "Write slot duration, in microseconds"
        default 60

    config OCS_TOOLS_ROM_CODE_SCANNER_WRITE_BIT_INTERVAL
        int "Write bit duration, in microseconds"
        default 10

    config OCS_TOOLS_ROM_CODE_SCANNER_WRITE_RECOVERY_INTERVAL
        int "Write recovery duration, in microseconds"
        default 1

    config OCS_TOOLS_ROM_CODE_SCANNER_READ_SLOT_INTERVAL
        int "Read slot duration, in microseconds"
        default 60

    config OCS_TOOLS_ROM_CODE_SCANNER_READ_BIT_INIT_INTERVAL
        int "Read bit INIT duration, in microseconds"
        default 5

    config OCS_TOOLS_ROM_CODE_SCANNER_READ_BIT_RC_INTERVAL
        int "Read bit RC duration, in microseconds"
        default 5

    config OCS_TOOLS_ROM_CODE_SCANNER_READ_RECOVERY_INTERVAL
        int "Read bit recovery interval, in microseconds"
        default 1
endmenu
